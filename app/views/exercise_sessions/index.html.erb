<p id="notice"><%= notice %></p>

<h1>Exercise Sessions</h1>

<%= link_to 'New Exercise Session', new_exercise_session_path %>
<br>
<%= link_to 'First', exercise_sessions_path(page: 0) %>
<%= link_to 'Previous', exercise_sessions_path(page: @page.to_i - 1) %>
<%= link_to 'Next', exercise_sessions_path(page: @page.to_i + 1) %>
<%= link_to 'Last', exercise_sessions_path(page: ((ExerciseSession.all.size)/10)) %>


<br>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th><%= link_to 'Type name', exercise_types_path(page: 0) %></th>
      <th>Program</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercise_sessions.each do |exercise_session| %>
      <tr>
        <td><%= display_date(exercise_session) %></td>
        <td><%= exercise_session.exercise_type.try(:name) || 'None' %></td>
        <td><%= exercise_session.exercise_program.name %></td>
        <td><%= link_to 'Show', exercise_session %></td>
        <td><%= link_to 'Edit', edit_exercise_session_path(exercise_session) %></td>
        <td><%= link_to 'Destroy', exercise_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
