<p id="notice"><%= notice %></p>

<h1>Exercise Programs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exercise_programs.each do |exercise_program| %>
      <tr>
        <td><%= exercise_program.name %></td>
        <td><%= exercise_program.description %></td>
        <td><%= link_to 'Show', exercise_program %></td>
        <td><%= link_to 'Edit', edit_exercise_program_path(exercise_program) %></td>
        <td><%= link_to 'Destroy', exercise_program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

